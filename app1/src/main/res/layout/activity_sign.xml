<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">


    <View
        android:background="@color/color_eeeeee"
        android:layout_gravity="center_horizontal"
        android:layout_height="2px"
        android:layout_width="match_parent" />

    <ImageView
        android:background="@mipmap/ic_launcher"
        android:id="@+id/img_head"
        android:layout_gravity="center_horizontal"
        android:layout_height="85dp"
        android:layout_marginTop="60dp"
        android:layout_width="85dp" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="B应用"
        android:textColor="@color/color_333333"
        android:textSize="18sp" />

    <View
        android:background="@color/color_eeeeee"
        android:layout_gravity="center_horizontal"
        android:layout_height="2px"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:text="登录后应用将获取一下权限"
        android:textColor="@color/color_333333"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:background="@drawable/shape_bfbfbf_10"
            android:layout_gravity="center_vertical"
            android:layout_height="7dp"
            android:layout_width="7dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:text="获取的公开信息（昵称、头像等）"
            android:textColor="@color/color_bfbfbf"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ll_success_show"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_use_head"
            android:layout_height="28dp"
            android:layout_width="28dp" />

        <TextView
            android:id="@+id/tv_use_name"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />


    </LinearLayout>


    <Button
        android:id="@+id/bt_confirm_login"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:padding="6dp"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>